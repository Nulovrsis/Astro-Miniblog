---
const platform = "github";
const username = "Nulovrsis";
import Social from "./Social.astro";

const currentYear = new Date().getFullYear();
const startYear = 2025;
const yearText =
  currentYear === startYear ? startYear : `${startYear}–${currentYear}`;
---

<footer class="mt-12 px-4 py-6">
  <div class="mx-auto flex max-w-xl flex-col items-center gap-4">
    <div class="flex flex-wrap justify-center gap-4">
      <Social platform="Github" username="Nulovrsis" />
      <Social platform="Twitter" username="nulovrsis" />
      <Social platform="Steam" username="nulovrsis" />
      <Social platform="Bangumi" username="nulovrsis" />
    </div>
    <p class="text-center text-sm text-zinc-500 dark:text-zinc-400">
      © {yearText} Nulovrsis. <br />
      All Rights Reserved.
    </p>
  </div>
</footer>
